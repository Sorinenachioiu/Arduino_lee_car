// Setup thingy
void setup() {
  pinMode(enA,OUTPUT);
  pinMode(enB,OUTPUT);
  pinMode(in1,OUTPUT);
  pinMode(in2,OUTPUT);
  pinMode(in3,OUTPUT);
  pinMode(in4,OUTPUT);

  digitalWrite(enA,LOW);
  digitalWrite(in1,HIGH);
  digitalWrite(in2,LOW);

  digitalWrite(enB,LOW);
  digitalWrite(in3,HIGH);
  digitalWrite(in4,LOW);
  
  s_point.row=1;
  s_point.col=1;
  f_point.row=15;
  f_point.col=15;
  obs[s_point.row][s_point.col]=0;
}

//Functions :

void stop_now()
{
  digitalWrite(in1, LOW);
  digitalWrite(in2, LOW);  
  digitalWrite(in3, LOW);
  digitalWrite(in4, LOW);
}


void move_forward()
{
  // Set Motor A forward

  digitalWrite(in1,HIGH);
  digitalWrite(in2,LOW);
  analogWrite(enA, 200);

  // Set Motor B forward

  digitalWrite(in3,HIGH);
  digitalWrite(in4,LOW);
  analogWrite(enB, 200);
}

void turn_right()
{
  // Set Motor A backward
  
  digitalWrite(in1, LOW);
  digitalWrite(in2, HIGH); 
  analogWrite(enA, 200);

  // Set Motor B forward
  
  digitalWrite(in3, HIGH);
  digitalWrite(in4, LOW);
  analogWrite(enB, 200);
}

void turn_left()
{
  // Set Motor A forward
  
  digitalWrite(in1, HIGH);
  digitalWrite(in2, LOW);
  analogWrite(enA, 200);

  // Set Motor B backward
  
  digitalWrite(in3, LOW);
  digitalWrite(in4, HIGH); 
  analogWrite(enB, 200);
 
}

//loop thingy
void loop() {
  
  if(not_finish)
  {
      for(int i=0;i<4;i++)
      {
          if(obs[s_point.row+dlin[i]][s_point.col+dcol[i]])
          {
            obs[s_point.row+dlin[i]][s_point.col+dcol[i]]=0;
            if(current_direction!=i)
            {
                if((current_direction-1==i||current_direction-i==-3))
                {
                    turn_left();
                    if(i==3)
                        current_direction=3;
                    else
                        current_direction=current_direction-1;
                }
                else
                {
                    if(current_direction+1==i||current_direction-i==3)
                    {
                        turn_right();
                        if(i==0)
                            current_direction=0;
                        else
                            current_direction=current_direction+1;
                    }
                }
            }

            s_point.row=s_point.row+dlin[i];
            s_point.col=s_point.col+dcol[i];
            move_forward();
            
            if(s_point.row==f_point.row&&s_point.col==f_point.col)
                not_finish=0;

          }
      }
  }

